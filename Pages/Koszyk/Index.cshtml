@model Projekt.Pages.Koszyk.IndexModel
@{
}


<h1>Index</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Items[0].ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Items) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td><a asp-page="/Koszyk/Delete" asp-route-id="@item.ProductId">Usun</a></td>
                
                
        </tr>
}
        
    </tbody>
</table>
