@page "{id:int?}"
@model Projekt.Pages.Account.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Produkt</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="text-danger"></div>
            <input type="hidden" asp-for="Users.Id" />
            <div class="form-group">
                <label asp-for="Users.Login" class="control-label"></label>
                <input asp-for="Users.Login" class="form-control" />
                <span asp-validation-for="Users.Login" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Users.Password" class="control-label"></label>
                <input asp-for="Users.Password" class="form-control" />
                <span asp-validation-for="Users.Password" class="text-danger"></span>
            </div>
            <select asp-for="Users.IdRoli" class="form-control">
                <option value="1">Admin</option>
                <option value="2">Kierownik</option>
                <option value="3">Pracownik</option>

            </select>
            <span asp-validation-for="Users.IdRoli" class="text-danger"></span>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
